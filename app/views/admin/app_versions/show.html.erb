<% content_for :title, @app_version.respond_to?(:name) ? @app_version.name : "App version" %>

<div class="container-lg">
  <div class="mb-6">
    <div class="flex items-center space-x-4">
      <%= link_to admin_app_versions_path, class: "btn-ghost text-sm py-1 px-3" do %>
        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
        </svg>
        Back to App versions
      <% end %>
    </div>

    <div class="mt-4 flex items-center justify-between">
      <h1 class="text-3xl font-bold text-gray-900 dark:text-gray-50"><%= @app_version.respond_to?(:name) ? @app_version.name : "App version ##{@app_version.id}" %></h1>

      <div class="flex items-center space-x-3">
        <%= link_to edit_admin_app_version_path(@app_version.id), class: "btn-primary" do %>
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
          </svg>
          Edit
        <% end %>

        <%= link_to admin_app_version_path(@app_version.id),
            method: :delete,
            data: { confirm: "Are you sure you want to delete this app_version?" },
            class: "btn-danger" do %>
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
          </svg>
          Delete
        <% end %>
      </div>
    </div>
  </div>

  <!-- App version Content -->
  <div class="card bg-gray-50 dark:bg-gray-900 border border-gray-200 dark:border-gray-700">
    <div class="card-body">
      <div class="space-y-6">
        <!-- App -->
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">App</label>
          <div class="text-lg font-medium text-gray-900 dark:text-gray-100"><%= @app_version.app_id %></div>
        </div>

        <!-- Version name -->
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Version name</label>
          <div class="text-lg font-medium text-gray-900 dark:text-gray-100"><%= @app_version.version_name %></div>
        </div>

        <!-- Version code -->
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Version code</label>
          <div class="text-lg font-medium text-gray-900 dark:text-gray-100"><%= @app_version.version_code %></div>
        </div>

        <!-- Update time -->
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Update time</label>
          <div class="text-lg font-medium text-gray-900 dark:text-gray-100"><%= @app_version.update_time&.strftime('%Y-%m-%d %H:%M') %></div>
        </div>

        <!-- Download Source -->
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">‰∏ãËΩΩÊù•Ê∫ê (Download Source)</label>
          <% if @app_version.apk_file.attached? %>
            <div class="p-3 bg-blue-50 dark:bg-blue-900/20 border border-blue-200 dark:border-blue-800 rounded-lg">
              <p class="text-sm font-medium text-blue-700 dark:text-blue-300 mb-2">
                üì¶ Â∑≤‰∏ä‰º† APK Êñá‰ª∂
              </p>
              <p class="text-sm text-gray-700 dark:text-gray-300">
                Êñá‰ª∂Âêç: <%= @app_version.apk_file.filename %><br>
                Â§ßÂ∞è: <%= number_to_human_size(@app_version.apk_file.byte_size) %>
              </p>
              <div class="mt-2">
                <%= link_to @app_version.final_download_url, target: "_blank", class: "text-blue-600 dark:text-blue-400 hover:underline text-sm" do %>
                  ‚Üì ‰∏ãËΩΩ APK
                <% end %>
              </div>
            </div>
          <% elsif @app_version.download_url.present? %>
            <div class="p-3 bg-green-50 dark:bg-green-900/20 border border-green-200 dark:border-green-800 rounded-lg">
              <p class="text-sm font-medium text-green-700 dark:text-green-300 mb-2">
                üîó Â§ñÈÉ®ÈìæÊé•
              </p>
              <div class="text-sm text-gray-700 dark:text-gray-300 break-all">
                <%= link_to @app_version.download_url, @app_version.download_url, target: "_blank", class: "text-green-600 dark:text-green-400 hover:underline" %>
              </div>
            </div>
          <% else %>
            <div class="text-sm text-gray-500 dark:text-gray-400">Êú™ËÆæÁΩÆ</div>
          <% end %>
        </div>

        <!-- File size -->
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">File size</label>
          <div class="text-lg font-medium text-gray-900 dark:text-gray-100"><%= @app_version.file_size %></div>
        </div>

        <!-- File size bytes -->
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">File size bytes</label>
          <div class="text-lg font-medium text-gray-900 dark:text-gray-100"><%= @app_version.file_size_bytes %></div>
        </div>

        <!-- Min android version -->
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Min android version</label>
          <div class="text-lg font-medium text-gray-900 dark:text-gray-100"><%= @app_version.min_android_version %></div>
        </div>

        <!-- Release notes -->
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Release notes</label>
          <div class="prose prose-gray dark:prose-invert max-w-none">
            <%= simple_format(@app_version.release_notes) %>
          </div>
        </div>

        <!-- Changelog -->
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Changelog</label>
          <div class="prose prose-gray dark:prose-invert max-w-none">
            <%= simple_format(@app_version.changelog) %>
          </div>
        </div>

        <!-- Force update -->
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Force update</label>
          <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium <%= @app_version.force_update ? 'bg-green-100 text-green-800 dark:bg-green-900 dark:text-green-300' : 'bg-red-100 text-red-800 dark:bg-red-900 dark:text-red-300' %>">
            <%= @app_version.force_update ? 'Yes' : 'No' %>
          </span>
        </div>

        <!-- Metadata -->
        <div class="pt-6 border-t border-gray-200 dark:border-gray-600">
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
              <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">ID</label>
              <div class="text-sm text-gray-900 dark:text-gray-100 font-mono"><%= @app_version.id %></div>
            </div>
            <div>
              <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Created</label>
              <div class="text-sm text-gray-600 dark:text-gray-400">
                <%= @app_version.created_at.strftime("%B %d, %Y at %I:%M %p") %>
                <span class="text-gray-400">(<%= time_ago_in_words(@app_version.created_at) %> ago)</span>
              </div>
            </div>
            <div>
              <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Last Updated</label>
              <div class="text-sm text-gray-600 dark:text-gray-400">
                <%= @app_version.updated_at.strftime("%B %d, %Y at %I:%M %p") %>
                <span class="text-gray-400">(<%= time_ago_in_words(@app_version.updated_at) %> ago)</span>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
