<% content_for :title, "Crash Report ##{@crash_report.id}" %>

<div class="container-lg">
  <div class="mb-6">
    <div class="flex items-center space-x-4">
      <%= link_to admin_crash_reports_path, class: "btn-ghost text-sm py-1 px-3" do %>
        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
        </svg>
        Back to Crash Reports
      <% end %>
    </div>

    <div class="mt-4 flex items-center justify-between">
      <h1 class="text-3xl font-bold text-gray-900 dark:text-gray-50">Crash Report #<%= @crash_report.id %></h1>

      <div class="flex items-center space-x-3">
        <%= link_to admin_crash_report_path(@crash_report.id),
            method: :delete,
            data: { confirm: "Are you sure you want to delete this crash report?" },
            class: "btn-danger" do %>
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
          </svg>
          Delete
        <% end %>
      </div>
    </div>
  </div>

  <!-- App Info Section -->
  <div class="card bg-gray-50 dark:bg-gray-900 border border-gray-200 dark:border-gray-700 mb-6">
    <div class="card-body">
      <h2 class="text-xl font-bold text-gray-900 dark:text-gray-50 mb-4">Application Information</h2>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Package Name</label>
          <div class="text-lg font-medium text-gray-900 dark:text-gray-100"><%= @crash_report.app_info&.dig('packageName') || 'N/A' %></div>
        </div>
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Version Name</label>
          <div class="text-lg font-medium text-gray-900 dark:text-gray-100"><%= @crash_report.app_info&.dig('versionName') || 'N/A' %></div>
        </div>
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Version Code</label>
          <div class="text-lg font-medium text-gray-900 dark:text-gray-100"><%= @crash_report.app_info&.dig('versionCode') || 'N/A' %></div>
        </div>
      </div>
    </div>
  </div>

  <!-- Device Info Section -->
  <div class="card bg-gray-50 dark:bg-gray-900 border border-gray-200 dark:border-gray-700 mb-6">
    <div class="card-body">
      <h2 class="text-xl font-bold text-gray-900 dark:text-gray-50 mb-4">Device Information</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Manufacturer</label>
          <div class="text-lg font-medium text-gray-900 dark:text-gray-100"><%= @crash_report.device_info&.dig('manufacturer') || 'N/A' %></div>
        </div>
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Model</label>
          <div class="text-lg font-medium text-gray-900 dark:text-gray-100"><%= @crash_report.device_info&.dig('model') || 'N/A' %></div>
        </div>
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Android Version</label>
          <div class="text-lg font-medium text-gray-900 dark:text-gray-100"><%= @crash_report.device_info&.dig('androidVersion') || 'N/A' %></div>
        </div>
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">SDK Int</label>
          <div class="text-lg font-medium text-gray-900 dark:text-gray-100"><%= @crash_report.device_info&.dig('sdkInt') || 'N/A' %></div>
        </div>
      </div>
    </div>
  </div>

  <!-- Crash Info Section -->
  <div class="card bg-gray-50 dark:bg-gray-900 border border-gray-200 dark:border-gray-700 mb-6">
    <div class="card-body">
      <h2 class="text-xl font-bold text-gray-900 dark:text-gray-50 mb-4">Crash Information</h2>
      <div class="space-y-6">
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Timestamp</label>
          <div class="text-lg font-medium text-gray-900 dark:text-gray-100"><%= @crash_report.crash_info&.dig('timestamp') || 'N/A' %></div>
        </div>
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Exception Type</label>
          <div class="text-lg font-medium text-red-600 dark:text-red-400"><%= @crash_report.crash_info&.dig('exceptionType') || 'N/A' %></div>
        </div>
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Exception Message</label>
          <div class="text-lg font-medium text-gray-900 dark:text-gray-100"><%= @crash_report.crash_info&.dig('exceptionMessage') || 'N/A' %></div>
        </div>
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Stack Trace</label>
          <div class="bg-gray-800 dark:bg-gray-950 text-gray-100 p-4 rounded-lg overflow-x-auto">
            <pre class="text-sm font-mono whitespace-pre-wrap"><%= @crash_report.crash_info&.dig('stackTrace') || 'N/A' %></pre>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Memory Info Section -->
  <div class="card bg-gray-50 dark:bg-gray-900 border border-gray-200 dark:border-gray-700 mb-6">
    <div class="card-body">
      <h2 class="text-xl font-bold text-gray-900 dark:text-gray-50 mb-4">Memory Information</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Available Memory</label>
          <div class="text-lg font-medium text-gray-900 dark:text-gray-100"><%= @crash_report.memory_info&.dig('availableMB') || 'N/A' %> MB</div>
        </div>
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Total Memory</label>
          <div class="text-lg font-medium text-gray-900 dark:text-gray-100"><%= @crash_report.memory_info&.dig('totalMB') || 'N/A' %> MB</div>
        </div>
      </div>
    </div>
  </div>

  <!-- Additional Info Section -->
  <% if @crash_report.additional_info.present? %>
    <div class="card bg-gray-50 dark:bg-gray-900 border border-gray-200 dark:border-gray-700 mb-6">
      <div class="card-body">
        <h2 class="text-xl font-bold text-gray-900 dark:text-gray-50 mb-4">Additional Information</h2>
        <div class="space-y-4">
          <% @crash_report.additional_info.each do |key, value| %>
            <div>
              <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2"><%= key.to_s.titleize %></label>
              <div class="text-lg font-medium text-gray-900 dark:text-gray-100"><%= value %></div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>

  <!-- Metadata Section -->
  <div class="card bg-gray-50 dark:bg-gray-900 border border-gray-200 dark:border-gray-700">
    <div class="card-body">
      <h2 class="text-xl font-bold text-gray-900 dark:text-gray-50 mb-4">Report Metadata</h2>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Report ID</label>
          <div class="text-sm text-gray-900 dark:text-gray-100 font-mono"><%= @crash_report.id %></div>
        </div>
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Reported At</label>
          <div class="text-sm text-gray-600 dark:text-gray-400">
            <%= @crash_report.created_at.strftime("%B %d, %Y at %I:%M %p") %>
            <span class="text-gray-400">(<%= time_ago_in_words(@crash_report.created_at) %> ago)</span>
          </div>
        </div>
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Last Updated</label>
          <div class="text-sm text-gray-600 dark:text-gray-400">
            <%= @crash_report.updated_at.strftime("%B %d, %Y at %I:%M %p") %>
            <span class="text-gray-400">(<%= time_ago_in_words(@crash_report.updated_at) %> ago)</span>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
